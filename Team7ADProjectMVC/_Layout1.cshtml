                        <li id="menu1"><a href="@baseurl/Store/ViewRequisitions">Requisitions & Retrievals</a></li>
                        <li id="menu2"><a href="@baseurl/Store/ViewDisbursements">View Disbursements</a></li>
                    }
                    @if (Page.Employee.Role.MakePurchaseOrder|| Page.Employee.Role.ApprovePurchaseOrder)
                    {
                        <li id="menu3"><a href="@baseurl/StorePO/PurchaseOrderSummary">Purchase Orders</a></li>
                    }
                    @if (Page.Employee.Role.InventoryManagement)
                    {
                        <li id="menu4"><a href="@baseurl/StorePO/ListDeliveries">Deliveries</a></li>
                        <li id="menu5"><a href="@baseurl/Store/Inventory">View Inventory</a></li>
                        <li id="menu6"><a href="@baseurl/Store/SupplierList">Supplier List</a></li>
                    }
                    @if (Page.Employee.Role.ViewReports)
                    {
                        <li id="menu7"><a href="@baseurl/Rpt">Generate Reports</a></li>
                    }
                    @if (Page.Employee.Role.MakeAdjustment)
                    {
                        <li id="menu8"><a href="@baseurl/Adjustments/Create">Create Adjustment</a></li>
                        <li id="menu9"><a href="@baseurl/Adjustments/ViewAdjustment">View Adjustment</a></li>
                    }
                    @if (Page.Employee.Role.ApproveAdjustment)
                    {
                        <li id="menu9"><a href="@baseurl/Adjustments/ViewAdjustment">Approve Adjustment</a></li>
                        
                    }

                    @if (Page.Employee.Role.Disbursement || Page.Employee.Role.InventoryManagement || Page.Employee.Role.MakePurchaseOrder || Page.Employee.Role.ApprovePurchaseOrder || Page.Employee.Role.ViewReports || Page.Employee.Role.MakeAdjustment || Page.Employee.Role.ApproveAdjustment)
                    {
                        <li><hr /></li>
                    }   
                 
                    <!--Department Functions-->

                    @if (Page.Employee.Role.ViewRequisition|| Page.Employee.Role.ApproveRequisition|| Page.Employee.Role.MakeRequisition|| Page.Employee.Role.ChangeCollectionPoint|| Page.Employee.Role.ConfirmDisbursement|| Page.Employee.Role.DelegateRole)
                    {
                        
                        <li><a><b><u>Stationery Requisition</u></b></a></li>
                    } 
                    @if (Page.Employee.Role.ViewRequisition)
                    {
                        <li id="menu10"><a href="@baseurl/Stationery/DepartmentRequisitions">View Requisition</a></li>
                    }
                    @if (Page.Employee.Role.ApproveRequisition)
                    {
                        <li id="menu11"><a href="@baseurl/Head/ApproveRequisition">Approve Requisition</a></li>
                    }
                    @if (Page.Employee.Role.MakeRequisition)
                    {
                        <li id="menu12"><a href="@baseurl/Stationery/EmployeeRequisition">Make Requisition</a></li>
                    }
                    @if (Page.Employee.Role.ChangeCollectionPoint)
                    {                       
                        <li id="menu13"><a href="@baseurl/Representative/Edit">Change Collection Point</a></li>
                    }
                    @if (Page.Employee.Role.ConfirmDisbursement)
                    {
                        <li id="menu14"><a href="@baseurl/Representative/ViewDisbursements">Confirm Disbursement</a></li>
                    }
                    @if (Page.Employee.Role.DelegateRole)
                    {
                        <li id="menu15"><a href="@baseurl/Head/show">Manage Delegation</a></li>
                    }
                                      
                    @if (Page.Employee.Role.ChangeRepresentative)
                    {
                        <li id="menu16"><a href="@baseurl/Head/ChangeRepresentive">Change Department Representative</a></li>
                    }
                                   
                    
                    
                    
                </ul>

            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h1 class="page-header">
                    @Page.Title
                </h1>

                @*<h2 class="sub-header" id="sectiontitle">@Page.Subtitle</h2>*@

                <div id="mainbody" class="container-fluid">
                    
                   @RenderBody()

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <br />
