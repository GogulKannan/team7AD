@model Team7ADProjectMVC.AdjustmentDetail


<div class="editorRow">
    <div class="form-inline">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <div class="form-group">
                            
                                @Html.DropDownList("ItemNo", null, "-- Please Select --", htmlAttributes: new { @class = "form-control", @required=true }) <br />
                                @Html.ValidationMessageFor(model => model.ItemNo, "", new { @class = "text-danger" })
                           
                        </div>
                    </td>
                    <td>
                        <div class="form-group col-md-3">
                           
                                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", @required = true } }) <br />
                                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                            
                        </div>
                    </td>
                    <td>
                        <div class="form-group col-md-3">
                            
                                @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control", @required = true } }) <br />
                                @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
                            </div>
                        
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-3">
                                <input type="button" value="Delete" class="btn btn-danger delete-detail" />

                            </div>
                        </div>
                    </td>
            </tbody>
        </table>
    </div>


</div>

