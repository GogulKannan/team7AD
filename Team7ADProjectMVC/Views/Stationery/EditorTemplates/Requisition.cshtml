@model Team7ADProjectMVC.Requisition



@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="container-fluid" style="display:none">
    <div class="row">
        <div class="col-md-12">
            <div class="navbar navbar-default">
                <div class="form-group">
                    @Html.LabelFor(model => model.OrderedDate, "Date", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.OrderedDate, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        @Html.ValidationMessageFor(model => model.OrderedDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Employee.EmployeeName, "By", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Employee.EmployeeName, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        @Html.ValidationMessageFor(model => model.Employee.EmployeeName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                        @Html.HiddenFor(model => model.RequisitionStatus, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.DepartmentId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

        </div>
    </div>
</div>

