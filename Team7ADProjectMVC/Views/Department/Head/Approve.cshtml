@model Team7ADProjectMVC.Requisition
@{
    Page.Title = "Approve/Reject Requisition";
    Layout = "~/_Layout1.cshtml";
    Employee currentEmployee = (Employee)Session["User"];
    Page.Employee = currentEmployee;

    //Author: Sandi
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-2">
                    <h5>
                        @{

                            string[] D = ViewBag.r.OrderedDate.ToString().Split(' ');
                            string[] sd = D[0].Split('/');
                            ViewBag.showDate = sd[1] + "/" + sd[0] + "/" + sd[2];
                        }
                        Ordered Date:
                    </h5>
                </div>
                <div class="col-md-2">
                    <h5>
                        @ViewBag.showDate
                    </h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5>
                        Department Name:
                    </h5>
                </div>
                <div class="col-md-2">
                    <h5>
                        @Html.DisplayFor(model => model.Employee.Department.DepartmentName)
                    </h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5>
                        Employee Name:
                    </h5>
                </div>
                <div class="col-md-2">
                    <h5>
                        @Html.DisplayFor(model => model.Employee.EmployeeName)
                    </h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5>
                        Employee Email Address:
                    </h5>
                </div>
                <div class="col-md-2">
                    <h5>
                        <a href="mailto: @Model.Employee.Email">@Html.DisplayFor(model => model.Employee.Email)</a>
                        <br />
                    </h5>
                </div>
            </div>


 <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-lg-8">
            <span class="label label-default"></span>
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            Description
                        </th>
                        <th>
                            Quantity
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.RequisitionDetails)
                    {
                        <tr>
                            <td>
                                @item.Inventory.Description
                            </td>
                            <td>
                                @item.Quantity
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
            <hr />
        <form id="form1" action="../MarkAsCollected"  onsubmit="return confirm('Are you sure you want to confirm?');">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8 col-lg-8">
                        <h5>
                            Comment:
                        </h5>

                        <p>
                            &nbsp;
                            <textarea name="textcomments" form="form1" class="form-control" id="Text" rows="4" cols="100" placeholder="Enter comment here..."></textarea>


                        </p>
                    </div>
                </div>
                </div>
                <br />

                <input type="hidden" value="@Model.RequisitionId" name="rid" />

                <div class="row">
                    <div class="col-md-4 col-lg-5"></div>
                    <div class="col-md-4 col-lg-3 text-right">
                        <input type="submit" class="btn btn-success btn-lg" name="status" value="Approve" />
                        <input type="submit" class="btn btn-danger btn-lg" name="status" value="Reject" />
                    </div>
                </div>
 
        </form>
        </div>
    

</div>


<script>
$(document).ready(function(){
    document.getElementById("menu11").className += "active";
});
</script>